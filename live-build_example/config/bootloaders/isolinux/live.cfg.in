label live-@FLAVOUR@
	menu label Запустити ^Live систему (@FLAVOUR@)
	menu default
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@ persistence

label live-@FLAVOUR@-nopersist
	menu label Live система без ^persistence (@FLAVOUR@)
	linux @LINUX@
	initrd @INITRD@
	append @APPEND_LIVE@

menu begin advanced
	menu title Розширен╕ опц╕╖
	include stdmenu.cfg

	label mainmenu
		menu label Назад..
		menu exit

	label live-@FLAVOUR@-failsafe
		menu label Live система (@FLAVOUR@ fail-safe режим)
		linux @LINUX@
		initrd @INITRD@
		append @APPEND_LIVE_FAILSAFE@

	label hdt
		menu label Виявлення апаратного забезпечення (HDT)
		com32 hdt.c32

	label memtest
		menu label ╤нструмент тестування пам'ят╕ (memtest86+)
		linux /live/memtest.bin

menu end
